<?xml version="1.0" encoding="utf-8"?>
<!-- SỬA ĐỔI: Chuyển sang LinearLayout để quản lý bố cục dọc dễ dàng hơn -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/widget_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_widget_merit_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" /> <!-- Margin bây giờ sẽ hoạt động -->

    <!-- SỬA ĐỔI: Dùng RelativeLayout chỉ để chứa cá và gậy, giúp định vị gậy dễ hơn -->
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/iv_widget_fish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fish_closed" />

        <ImageView
            android:id="@+id/iv_widget_mallet"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="-5dp"
            android:rotation="20"
            android:src="@drawable/mallet"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>